@model ResumenTajamar

<h1 style="color:blueviolet">Detalles del Usuario</h1>

<div class="card" style="width: 30rem;">
    <div class="text-center mt-3">
        <img src="@Model.Imagen" alt="Imagen Usuario"
             style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; border: 2px solid blueviolet;" />
    </div>

    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <b>ID:</b> @Model.IdUsuario
            </li>
            <li class="list-group-item">
                <b>Nombre:</b> @Model.Nombre @Model.Apellidos
            </li>
            <li class="list-group-item">
                <b>Email:</b> <a href="mailto:@Model.Email">@Model.Email</a>
            </li>
            <li class="list-group-item">
                <b>Curso:</b> @Model.Curso
            </li>
            <li class="list-group-item">
                <b>Actividad:</b> @Model.Actividad
            </li>
            <li class="list-group-item">
                <b>Fecha Inscripción:</b> @Model.FechaInscripcion.ToShortDateString()
            </li>
            <li class="list-group-item">
                <b>¿Es Capitán?:</b>
                @(Model.Capitan ? "SÍ" : "NO")
            </li>
        </ul>
    </div>

    <div class="card-footer">
        <a asp-action="Index" class="btn btn-outline-primary">Volver a la lista</a>
    </div>
</div>